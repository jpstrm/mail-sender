    "http-errors": "~1.6.3",
    "joi": "^14.3.1",
    "lodash": "^4.17.20",
    "log4js": "^6.3.0",
    "log4js-extend": "^0.2.1",
    "mongoose": "^5.9.15",
    "nconf": "^0.10.0",
