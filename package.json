    "nodemailer": "^6.4.13",
    "standard": "^14.3.4",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "aws-sdk": "^2.771.0",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "nodemon": "^2.0.4",
    "supertest": "^5.0.0"
  },
  "husky": {
    "hooks": {
