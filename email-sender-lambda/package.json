{
  "name": "mailsender",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon src/index.js",
    "lint": "standard \"src/**/*.js\" \"tests/**/*.js\" \"bin/www\"",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "deploy": "sls deploy",
    "deploy:local": "sls deploy && sls invoke -f app"
  },
  "dependencies": {
    "aws-sdk": "^2.771.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.2",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "joi": "^14.3.1",
    "log4js": "^6.3.0",
    "log4js-extend": "^0.2.1",
    "nconf": "^0.10.0",
    "nodemailer": "^6.4.13",
    "standard": "^14.3.4"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "nodemon": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
